<div class="db">
 <% if (allrecs.length > 0) {%>
  <table>
    <tr>
      <th>Customer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin?</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.customer_id %></td>
      <td><%= recref.firstname %></td>
      <td><%= recref.lastname %></td>
      <td><%= recref.email %></td>
      <td><%= recref.isadmin %></td>
      <td><a href="/customer/<%= recref.customer_id %>/show"> Details</a></td>
      <td>
        <a
          href="/customer/<%= recref.customer_id
      %>/edit"
          >Edit</a
        >
      </td>
      <td>
        <a
          href="/customer/<%= recref.customer_id
      %>/makeadmin"
          >Make Admin</a
        >
      </td>
      <td>
        <a
          href="/customer/<%= recref.customer_id
      %>/removeadmin"
          >Remove Admin</a
        >
      </td>
      <td>
        <a
          href="/customer/<%= recref.customer_id %>/delete"
          onclick="return confirm('Are you sure you want to delete this record?');"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>
  <p><a href="/customer/addrecord">Add New</a></p>
</div>
