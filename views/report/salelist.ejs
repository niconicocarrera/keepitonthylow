<div class="db">
 <% if (allrecs.length > 0) {%>
  <table>
    <tr>
      <th>Order ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Order Date</th>
      <th>Product</th>
      <th>Price</th>
      <th>Qty</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.order_id %></td>
      <td><%= recref.firstname %></td>
      <td><%= recref.lastname %></td>
      <td><%= recref.saledate.toLocaleDateString('en-US') %></td>
      <td><%= recref.productname %></td>
      <td><%= recref.saleprice %></td>
      <td><%= recref.qty %></td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>
</div>