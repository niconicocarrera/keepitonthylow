<div class="db">
 <% if (allrecs.length > 0) {%>
  <table>
    <tr>
      <th>Customer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.customer_id %></td>
      <td><%= recref.firstname %></td>
      <td><%= recref.lastname %></td>
      <td><%= recref.email %></td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>
</div>
