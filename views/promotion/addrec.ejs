<div class="db">
  <h1>New Record</h1>
  <form action="/promotion" method="post">
    <table>
      <tr>
        <td>Promotion Name:</td>
        <td><input type="text" name="promotitle" required /></td>
      </tr>
      <tr>
        <td>Promotion Image:</td>
        <td>
          <input type="text" name="promoimage" required />
        </td>
      </tr>
      <tr>
        <td>Description:</td>
        <td>
          <input type="text" name="description" required />
        </td>
      </tr>
      <tr>
        <td>Start Date:</td>
        <td>
          <input type="date" name="startdate" required />
        </td>
      </tr>
      <tr>
        <td>End Date:</td>
        <td>
          <input type="date" name="enddate" required />
        </td>
      </tr>
    </table>
    <button type="submit">Save</button>
  </form>
</div>
