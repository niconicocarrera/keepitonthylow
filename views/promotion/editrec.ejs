<div class="db">
<h1>Edit Supplier</h1>
  <form action="/promotion/save" method="post">
    <input type="hidden" name="promotion_id" value="<%= onerec.promotion_id %>" />
    <table>
      <tr>
        <td>Promotion Name:</td>
        <td>
          <input
            type="text"
            name="promotitle"
            value="<%= onerec.promotitle %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Promotion Image:</td>
        <td>
          <input
            type="text"
            name="promoimage"
            value="<%= onerec.promoimage %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Description:</td>
        <td>
          <input
            type="text"
            name="description"
            value="<%= onerec.description %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Start Date:</td>
        <td>
          <input
            type="date"
            name="startdate"
            value="<%= onerec.startdate.toISOString().split('T')[0] %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>End Date:</td>
        <td>
          <input
            type="date"
            name="enddate"
            value="<%= onerec.enddate.toISOString().split('T')[0] %>"
            required
          />
        </td>
      </tr>
    </table>
    <button type="submit">Save</button>
  </form>
</div>