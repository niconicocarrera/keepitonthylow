<div class="db">
<% if (allrecs.length > 0) {%>
  <table>
    <tr>
      <th>Promotion ID</th>
      <th>Promo Title</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.promotion_id %></td>
      <td><%= recref.promotitle %></td>
      <td><%= recref.description %></td>
      <td><%= recref.startdate %></td>
      <td><%= recref.enddate %></td>
      <td><a href="/promotion/<%= recref.promotion_id %>/show"> Details</a></td>
      <td>
        <a href="/promotion/<%= recref.promotion_id%>/edit">Edit</a>
      </td>
      <td>
        <a
          href="/promotion/<%= recref.promotion_id %>/delete"
          onclick="return confirm('Are you sure you want to delete this record?');"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>
  <p><a href="/promotion/addrecord">Add New</a></p>
</div>