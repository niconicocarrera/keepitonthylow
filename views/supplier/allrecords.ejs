<% if (allrecs.length > 0) {%>
<table>
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td><%= recref.supplier_id %></td>
    <td><%= recref.suppliername %></td>
    <td><%= recref.pointofcontact %></td>
    <td><%= recref.contactinfo %></td>
    <td><%= recref.webinfo %></td>
    <td><a href="/supplier/<%= recref.supplier_id %>/show"> Details</a></td>
    <td>
      <a
        href="/supplier/<%= recref.supplier_id
    %>/edit"
        >Edit</a
      >
    </td>
    <td>
      <a
        href="/supplier/<%= recref.supplier_id %>/delete"
        onclick="return confirm('Are you sure you want to delete this record?');"
        >Delete</a
      >
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>Not Records Available</p>
<% } %>
<p><a href="/supplier/addrecord">Add New</a></p>
