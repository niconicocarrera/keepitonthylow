<div class="db">
 <h1>Edit Sale Order</h1>
  <form action="/saleorder/save" method="post">
    <input type="hidden" name="order_id" value="<%= onerec.order_id %>" />
    <table>
      <tr>
        <td>Order ID:</td>
        <td>
          <input
            type="number"
            name="order_id"
            value="<%= onerec.order_id %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Customer ID:</td>
        <td>
          <input
            type="number"
            name="customer_id"
            value="<%= onerec.customer_id %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Sale Date (MM-DD-YYYY):</td>
        <td>
          <input
            type="date"
            name="saledate"
            value="<%= onerec.saledate.toISOString().split('T')[0] %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Customer Notes:</td>
        <td>
          <textarea
            name="customernotes"
            rows="10"
            cols="30"
            placeholder="NOTES"
            value="<%= onerec.customernotes %>"
            required
          ></textarea>
        </td>
      </tr>
      <tr>
        <td>Payment Status:</td>
        <td>
          <input
            type="text"
            name="paymentstatus"
            value="<%= onerec.paymentstatus %>"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Authorization Num:</td>
        <td>
          <input
            type="text"
            name="authorizationnum"
            value="<%= onerec.authorizationnum %>"
            required
          />
        </td>
      </tr>
    </table>
    <button type="submit">Save</button>
  </form>
</div> 