<div class="db">
  <% if (allrecs.length > 0) {%>
  <table>
    <tr>
      <th>Category ID</th>
      <th>Category Name</th>
      <th>Description</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.category_id %></td>
      <td><%= recref.categoryname %></td>
      <td><%= recref.description %></td>
      <td><a href="/category/<%= recref.category_id %>/show"> Details</a></td>
      <td>
        <a
          href="/category/<%= recref.category_id
      %>/edit"
          >Edit</a
        >
      </td>
      <td>
        <a
          href="/category/<%= recref.category_id %>/delete"
          onclick="return confirm('Are you sure you want to delete this record?');"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>
  <p><a href="/category/addrecord">Add New</a></p>
</div>
