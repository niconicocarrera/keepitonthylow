<div class="db">
  <h1>Category Record</h1>
  <form action="/category" method="post">
    <table>
      <tr>
        <td>Category ID:</td>
        <td><input type="number" name="category_id" required /></td>
      </tr>
      <tr>
        <td>Catehory Name:</td>
        <td><input type="text" name="categoryname" required /></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td>
          <textarea
            name="description"
            rows="10"
            cols="30"
            placeholder="Description"
          ></textarea>
        </td>
      </tr>
    </table>

    <button type="submit">Save</button>
  </form>
</div>